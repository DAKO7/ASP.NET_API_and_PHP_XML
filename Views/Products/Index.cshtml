@*@model ylesane2.Models.Product*@
@model IEnumerable<ylesane2.Models.Product>
@*@model List<ylesane2.Models.Product>*@
@{
    ViewBag.Title = "Index";
}


    <div class="container">
        <div>
            <div class="jumbotron">
                <h4 class="display-4" style="text-align:center;">
                    Services
                </h4>
            </div>
            <p>
                @if (Convert.ToInt32(Session["RoleId"]) == 2)
                 {
                    
                        @Html.ActionLink("Create New", "Create", "Products", new { @class = "btn btn-success" })
                    
                 }
            </p>
            @foreach (var item in Model)
            {
                if (Convert.ToInt32(Session["RoleId"]) == 2)
                {
                    <div class="text-center col-sm-6" style="padding:5px;">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name) | @Html.DisplayFor(modelItem => item.Price) €</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                @Html.ActionLink("Book", "ToBook", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink(" Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                }
                else if (Convert.ToInt32(Session["RoleId"]) != 0 && item.Price > 0)
                {
                    <div class="text-center col-sm-6" style="padding:5px;">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name) | @Html.DisplayFor(modelItem => item.Price) €</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                @Html.ActionLink("Book", "ToBook", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center col-sm-6" style="padding:5px;">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name) | @Html.DisplayFor(modelItem => item.Price) €</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                @Html.ActionLink("Book", "Login", "Home", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                }
             }
         </div>
    </div>

